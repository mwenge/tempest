	.NLIST
	.INCLUDE ALCOMN
	.LIST
	.CSECT
	.GLOBL	MSGLBS,INILIT,ENGMSG,GETOP3
	.PAGE
	.SBTTL	MESSAGE MACROS
	.INCLUDE ASCVG
	.MACRO ASCVH ...AR1,...AR2
	.NARG ...NUM
	.IF EQ ...NUM-1
	.NCHR ...HLO,<...AR1>	;1 ARGUMENT, CENTER STRING
	.BYTE -<...HLO*3>
	.ASCVG <...AR1>
	.IFF
	.BYTE ...AR1		;2 ARGUMENTS: HORIZ LOC.
	.ASCVG <...AR2>		;STRING
	.ENDC
	.ENDM
	.PAGE
	.SBTTL	PREPARE TO MAKE MSG TABLES
	.MACRO MESS ...LIT,...COL,...SCA,...YPO
	.=...ENG
	.WORD E'...LIT
	...ENG=...ENG+2
	.=...FRE
	.WORD F'...LIT
	...FRE=...FRE+2
	.=...GER
	.WORD G'...LIT
	...GER=...GER+2
	.=...SPA
	.WORD S'...LIT
	...SPA=...SPA+2
M'...LIT=.MSNUM
	.GLOBL M'...LIT
	.MSNUM=.MSNUM+2
	.=...CSY
	.BYTE <...COL*10>!...SCA	;COLOR, SCALE
	.BYTE ...YPO
	...CSY=...CSY+2
	.ENDM
NMSGS	=30.			;30 MESSAGES
...ENG	=.			;ENGLISH TABLE TOP
...FRE	=...ENG+<NMSGS*2>	;FRENCH TABLE TOP
...GER	=...FRE+<NMSGS*2>	;GERMAN TABLE TOP
...SPA	=...GER+<NMSGS*2>	;SPANISH TABLE TOP
...CSY	=...SPA+<NMSGS*2>	;COLOR, SCALE, Y TABLE TOP
.MSNUM	=0
MSGLBS	=...CSY
ENGMSG	=...ENG
FREMSG	=...FRE
GERMSG	=...GER
SPAMSG	=...SPA

	.SBTTL	MESSAGES: COLOR, SCALE, Y POSITION, LANGUAGE PTRS

