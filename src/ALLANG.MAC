LNGTAB:	.WORD ENGMSG
	.WORD FREMSG
	.WORD GERMSG
	.WORD SPAMSG
	.SBTTL	INITIALIZE LANGUAGE POINTER
INILIT:
	LDA INOP1		;SET UP BONUS LIFE INTERVAL
	STA OPTIN2
	AND I,38
	LSR
	LSR
	LSR
	TAX
	LDA X,TBLIFI
	STA BLIFIN
	LDA INOP0		;READ OPTION SWITCHES
	EOR I,2
	STA $CMODE
	LDA OPTIN2		;LIVES/GAME
	ROL
	ROL
	ROL
	AND I,3
	TAX
	LDA X,GAMLVS
	STA LVSGAM
	LDA OPTIN2		;LANGUAGE CHOICE
	AND I,06
	TAY
	LDA Y,LNGTAB		;SET POINTER TO LANGUAGE PTRS.
	STA LITRAL
	LDA Y,LNGTAB+1
	STA LITRAL+1
	JSR GETOP3
	STA OPTIN3
	RTS
TBLIFI:	.BYTE 2,1,3,4,5,6,7,0
GAMLVS:	.BYTE 3,4,5,2
	.END
